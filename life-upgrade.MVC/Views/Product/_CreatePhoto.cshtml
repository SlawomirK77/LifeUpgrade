@model LifeUpgrade.MVC.Models.CreatePhoto

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPhotoModal">
    Add Photo
</button>

<div class="modal fade" id="addPhotoModal" tabindex="-1" aria-labelledby="addPhotoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Photo" asp-action="Create" enctype="multipart/form-data" method="post">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="addPhotoModalLabel">Add Photo</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="ProductEncodedName" class="form-control" type="hidden"/>
                    
                    <div class="form-group">
                        <label asp-for="ImageFile" class="control-label">ImageFile</label>
                        <input asp-for="ImageFile" class="form-control" type="file"/>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control"/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-primary" value="Create"/>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
